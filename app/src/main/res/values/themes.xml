<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstantCare" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--text styles-->
    <style name="InstantCare.TextStyle.Display1.Oswald" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="InstantCare.TextStyle.Display1" parent="TextAppearance.AppCompat.Display1">
        <item name="fontFamily">@font/open_sans</item>
    </style>


    <style name="InstantCare.TextStyle.Display4" parent="TextAppearance.AppCompat.Display4">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="InstantCare.TextStyle.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="InstantCare.TextStyle.Title" parent="TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InstantCare.TextStyle.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="InstantCare.TextStyle.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="InstantCare.TextStyle.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/open_sans</item>
    </style>
</resources>